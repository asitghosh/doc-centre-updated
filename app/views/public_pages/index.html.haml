!!! 5
%html.fluid
  = render "head"
  %body{:class => "#{controller_name} #{action_name} help-center-home", :data => { :color => "#{(!current_user || current_user.channel_partner.color.empty?) ? '009abf' : current_user.channel_partner.color}" } }
    .fixed-header
      = render 'navigation',  :fluid => true, :search => false
    .gradient-header
      .search-bar.container
        %h2 AppDirect Documentation Center
        %h3 Everything you need to know about working with the AppDirect product suite.
        -if current_user
          = form_tag search_path, method: "get", class: "header-search" do
            = #select_tag(:index, options_for_select([["All", "All"], ["Release Notes", "Release"], ["Manuals", "Page"], ["FAQs", "Faq"], ["Roadmaps", "Roadmap"]], params[:index]), :class => "chosen-input large").html_safe
            = text_field_tag :q, params[:q], autocomplete: "off", placeholder: "Search Help Center"
            = hidden_field_tag(:time, params[:time])
            = hidden_field_tag(:sort, params[:sort])
            = hidden_field_tag(:index, "All")
            = submit_tag("Search", :class => "header_submit")
        - else
          = form_tag search_path, method: "get", class: "header-search" do
            = #select_tag(:index, options_for_select([["All", "All"], ["Release Notes", "Release"], ["Manuals", "Page"], ["FAQs", "Faq"], ["Roadmaps", "Roadmap"]], params[:index]), :class => "chosen-input large").html_safe
            = text_field_tag :q, params[:q], autocomplete: "off", placeholder: "Search Help Center"
            = hidden_field_tag(:time, params[:time])
            = hidden_field_tag(:sort, params[:sort])
            = hidden_field_tag(:index, "Api")
            = submit_tag("Search", :class => "header_submit")
    #main.help-center-home{:role => "main"}
      .container
        .three-up
          .col
            %a.doc-link{ :href => "/developer" }
              %h2 Sell & Distribute Products
              %img{ :src => "/finish-08.png"}
              .doc-link-text
                %p Learn how to use Billing Center to power your checkout or distribute in our network.
                %button Go to Docs
            %a.cta{ :href => "https://www.appdirect.com/plans" }
              %h3 Don't have a Billing Center yet?
              %span.all-caps.channel_color.small.no_decoration.after-icon-arrow-next Start for Free

          .col
            %a.doc-link{ :href => "/marketplace" }
              %h2 Manage Your Marketplace
              %img{ :src => "/finish-09.png"}
              .doc-link-text
                %p Learn how to use your marketplace to sell third party products.
                %button Go to Docs
            %a.cta{ :href => "https://www.appdirect.com/plans" }
              %h3 Don't have a Marketplace yet?
              %span.all-caps.channel_color.small.no_decoration.after-icon-arrow-next Start Your Free Trial

          - if false
            .col
              %a.doc-link{ :href => "#" }
                %h2 Manage Your Resellers
                %img{ :src => "/doc-center-home3-04.png"}
                .doc-link-text
                  %p Learn how to manage your saleforce and enable them to sell products.
                  %button Go to Docs
              %a.cta{ :href => "https://www.appdirect.com/plans" }
                %h3 Don't have the Reseller Service yet?
                %span.all-caps.channel_color.small.no_decoration.after-icon-arrow-next Start Your Free Trial

    = render 'footer_includes'





